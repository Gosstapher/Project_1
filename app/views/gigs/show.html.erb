<h1><%= @gig.name %></h1>
<div>
  <h4>Genre: <%= @gig.genre.name.capitalize %></h3>
  
  <br>
  <%= link_to( image_tag(@gig.image, alt:"No image", class: "gig-img"), artist_path(@gig.artist)) %>
  <br>
  <p><%= @gig.description %></p>
  <br>
  <p><%= @gig.venue.name %></p>
  <br>
  <p><%= @gig.capacity %></p>
  <br>
  <p><%= @gig.tickets_left %></p>
  <br>
  <p><%= @gig.start_time.strftime("%A %B %-d, %Y") %></p>
  <br>
  <p><%= @gig.start_time.strftime("%H:%M") %></p>
  <br>
  <p><%= @gig.end_time.strftime("%H:%M") %></p>
</div>

<div>
<% if @gig.tickets_left > 0 %>
  <%= button_to("Book a ticket for #{@gig.name}", new_gig_booking_path(@gig), method: :get) %>
<% else %>
  <h3>"There are no more tickets available"</h3>
<% end %>
<% if can? :manage, @gig %>
<div>
<%= link_to("Edit #{@gig.name}", edit_gig_path(@gig)) %><br>
<%= button_to("Delete #{@gig.name} ?", gig_path(@gig), method: :delete, data: {confirm: 'Delete #{@gig.name}? Are you sure?!'}) %>
</div>
<% end %>