  <h1 class="gig-list">List of Venues</h1>
  <main class="container">
    <section class="row">
      <% @venues.each do |venue| %>
      <div class="grid grid-6">
        <p><%= link_to("#{venue.name}", venue_path(venue)) %><p>
          <%= link_to( image_tag(venue.image, alt:"No image", class: "gig-img"), venue_path(venue)) %>
          <br>
        </div>
        <% end %>
      </section>
    </main>

    <br>
    <% if can? :manage, :all %>
    <div>
      <%= link_to("Add new Venue", new_venue_path) %>
    </div>
    <% end %>
